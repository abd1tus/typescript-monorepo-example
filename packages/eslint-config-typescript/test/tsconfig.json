{
  "compilerOptions": {
    "target": "es2017",
    "lib": [
      "es2017",
      "es7",
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "baseUrl": "test/src"
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "types": [
    "node"
  ]
}
